<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.fragment_pencegahan">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_pencegahanJtg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:onClick="onClickFB"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_volume_up_black_24dp"
        android:backgroundTint="@color/design_default_color_error"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/cara_pencegahan"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/design_default_color_error"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/healthy_lifestyle"
        android:alpha="0.3"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cara_pencegahan_isi"
            android:textSize="30sp"
            android:justificationMode="inter_word"
            android:gravity="fill"/>
    </LinearLayout>

</FrameLayout>